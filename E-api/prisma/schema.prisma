// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id        String    @id @default(uuid())
  name      String
  email     String
  password  String
  role      role      @relation(fields: [roleId], references: [id])
  createdAt DateTime  @default(now())
  updatedAt DateTime?
  roleId    Int
}

model role {
  id   Int    @id @default(autoincrement())
  name String
  user user[]
}

model event {
  id                String   @id @default(uuid())
  name              String
  date              DateTime
  description       String
  address           String
  lat               Float
  long              Float
  total_tickets     Int?
  available_tickets Int?
  price             Float?
  language          String
}

model partner {
  id          String @id @default(uuid())
  name        String
  description String
  type        String
}
